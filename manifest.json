{
  "name": "Browser Extension Explorer",
  "description": "Explore the basic components of browser extensions",
  "version": "1.0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "components/popup/popup.html"
  },
  "options_ui": {
    "open_in_tab": true,
    "page": "components/options/options.html"
  },
  "devtools_page": "components/devtools/devtools.html",
  "permissions": ["storage", "activeTab", "scripting"],
  "icons": {
    "16": "icons/codesearch_16x16.png",
    "48": "icons/codesearch_48x48.png",
    "64": "icons/codesearch_64x64.png",
    "128": "icons/codesearch_128x128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens popup.html"
    },
    "foobar": {
      "suggested_key": {
        "default": "Ctrl+Shift+J",
        "mac": "MacCtrl+Shift+J"
      },
      "description": "Runs 'foobar' on the current page"
    }
  },
  "chrome_settings_overrides": {
    "homepage": "https://www.buildingbrowserextensions.com",
    "search_provider": {
      "name": "Brave Search Engine",
      "search_url": "https://search.brave.com/search?q={searchTerms}",
      "encoding": "UTF-8",
      "is_default": true
    },
    "startup_pages": ["https://www.buildingbrowserextensions.com"]
  }
}
