// Welcome to the Browser Extension Explorer manifest!
//
// Comments are allowed in manifest.json files
{
  // __MSG messages are drawn from the _locales directory
  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "version": "1.0.1",
  "manifest_version": 3,
  "default_locale": "en",
  "background": {
    "service_worker": "background.js",
    "type": "module" // Allows the use of `import`
  },
  "action": {
    "default_popup": "components/popup/popup.html"
  },
  "options_ui": {
    // Options page opens in a modal instead of a new tab
    "open_in_tab": false,
    "page": "components/options/options.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"], // Inject script on every page
      "css": [],
      "js": ["scripts/content-scripts/main.js"]
    }
  ],
  "devtools_page": "components/devtools/devtools.html",
  "host_permissions": ["<all_urls>"],
  "permissions": [
    "alarms",
    "storage",
    "activeTab",
    "scripting",
    "declarativeNetRequest"
  ],
  "icons": {
    "16": "icons/codesearch_16x16.png",
    "48": "icons/codesearch_48x48.png",
    "64": "icons/codesearch_64x64.png",
    "128": "icons/codesearch_128x128.png"
  },
  "commands": {
    // Defines a shortcut to open the popup
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "__MSG_actionDescription__"
    },
    // Defines a custom command
    "foobar": {
      "suggested_key": {
        "default": "Ctrl+Shift+J",
        "mac": "MacCtrl+Shift+J"
      },
      "description": "__MSG_customCommandDescription__"
    }
  },
  "chrome_settings_overrides": {
    "homepage": "https://www.buildingbrowserextensions.com",
    "search_provider": {
      "name": "__MSG_searchEngineName__",
      "search_url": "https://search.brave.com/search?q={searchTerms}",
      "encoding": "UTF-8",
      "is_default": true
    },
    "startup_pages": ["https://www.buildingbrowserextensions.com"]
  },
  // Resources that can be referenced and loaded in content scripts
  "web_accessible_resources": [
    {
      "resources": ["/scripts/shared.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rulesets/ruleset_1.json"
      },
      {
        "id": "ruleset_2",
        "enabled": false,
        "path": "rulesets/ruleset_2.json"
      }
    ]
  }
}
